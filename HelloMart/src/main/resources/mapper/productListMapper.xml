<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hellomart.dao.ProductListDAO">
	

	<select id="getTotal" 
			parameterType="HashMap" 
			resultType="Integer">
		select count(*) from productlist
		
		<where>
			mainCategory = #{mainCategory}
			<if test="smallCategory != null">
			and smallCategory = #{smallCategory}
			</if>
		</where>
	</select>
	
	<select id="list"
			parameterType="HashMap"
			resultType="com.hellomart.dto.ProductList">
		select * from productlist
		
		<where>
			mainCategory = #{mainCategory}
			<if test="smallCategory != null"> 
				and smallCategory = #{smallCategory}
			</if>
			order by no desc limit #{offset}, #{limit}
		</where>
	</select>
	
	<select id="listDetail"
			resultType="com.hellomart.dto.ProductList">
		${sql}
	</select>
</mapper> 