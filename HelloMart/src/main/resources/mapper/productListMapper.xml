<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hellomart.dao.ProductListDAO">
	<select id="getMainList" parameterType="String" 
			resultType="com.hellomart.dto.ProductList">
		select * from productlist where maincategory = #{mainCategory} order by no desc
	</select>
	
	<select id="getSmallList" parameterType="String"
			resultType="com.hellomart.dto.ProductList">
		select * from productlist where smallcategory = #{smallCategory} order by no desc
	</select>
	
	<select id="getDetailList"
			resultType="com.hellomart.dto.ProductList">
	
	</select>
</mapper> 