<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hellomart.dao.ProductListDAO">
	

	<select id="list" parameterType="java.lang.Integer" 
			resultType="com.hellomart.dto.ProductList">
		select * from productlist order by no desc limit #{param1}, #{param2}
	</select>
	
	<select id="getTotal" resultType="java.lang.Integer">
		select count(*) from productlist
	</select>
	
	<select id="getSmallList" parameterType="String"
			resultType="com.hellomart.dto.ProductList">
		select * from productlist where smallcategory = #{smallCategory} order by no desc
	</select>
	
	<select id="getDetailList" parameterType="HashMap"
			resultType="com.hellomart.dto.ProductList">
		${sql}
	</select>
</mapper> 