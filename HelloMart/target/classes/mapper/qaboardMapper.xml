<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hellomart.dao.QABoardDAO">

	<select id="listQABoard" resultType="QABoard">
		SELECT * FROM QABoard
	</select>
	
	<insert id="insertQABoard">
		INSERT INTO
		
		QABoard (subject, content, id, reRef,
		reLev, reSeq, count)
		
		VALUES (#{subject}, #{content}, #{id}, #{reRef},
		#{reLev}, #{reSeq}, #{count});
	</insert>
	
	<update id="viewCount">
		UPDATE QABoard SET count=+1 WHERE idx=#{idx}
	</update>
	<select id="viewQABoard" resultType="QABoard">
		
		SELECT * FROM QABoard WHERE idx = #{idx}
	</select>
	
	<delete id="deleteQABoard">
		DELETE FROM QABoard WHERE idx = #{idx}
	</delete>
	
	<select id="getCount">
		SELECT COUNT(*) FROM QABaord
	</select>
	
	
</mapper>